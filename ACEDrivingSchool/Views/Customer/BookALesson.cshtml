@model ACEDrivingSchool.ViewModels.BookALessonViewModel
@{
    ViewBag.Title = "Book a lesson";
}

<h2>@ViewBag.Title</h2>
@using (Html.BeginForm("Save", "Customer", FormMethod.Post))
{ 
    <div class="form-group">
        @Html.LabelFor(m => m.Lesson.DateOfLesson)

        @Html.TextBoxFor(m => m.Lesson.DateOfLesson, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Lesson.DateOfLesson, "", new { @class = "text-danger" })

    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Lesson.TimeOfLesson)

        @Html.TextBoxFor(m => m.Lesson.TimeOfLesson, "{0:t}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Lesson.TimeOfLesson, "", new { @class = "text-danger" })

    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Lesson.LessonTypeId)

        @Html.DropDownListFor(m => m.Lesson.LessonTypeId, new SelectList(Model.LessonTypes, "Id", "Name"), "Select Lesson Type", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Lesson.LessonTypeId, "", new { @class = "text-danger" })

    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Lesson.DurationId)

        @Html.DropDownListFor(m => m.Lesson.DurationId, new SelectList(Model.Durations, "Id", "Name"), "Select Duration", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Lesson.DurationId, "", new { @class = "text-danger" })

    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Lesson.TransmissionTypeId)

        @Html.DropDownListFor(m => m.Lesson.TransmissionTypes, new SelectList(Model.TransmissionTypes, "Id", "Name"), "Select Transmission Type", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Lesson.TransmissionTypes, "", new { @class = "text-danger" })

    </div>

    <button name="submitButton" value="PayNow" type="submit" class="btn btn-primary">Pay now</button>
    <button name="submitButton" value="PayLater" type="submit" class="btn btn-primary">Pay Later</button>

}
